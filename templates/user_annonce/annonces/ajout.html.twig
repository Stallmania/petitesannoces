{% extends 'base.html.twig' %}

{% block title %}Ajouter une annonce{% endblock %}

{% block main %}
    <div class="container" style="min-height: calc(100vh - 215.96px - 57px)">
        <h1>Ajouter une annonce</h1>

        {# {% if app.request.attributes.get('_route') == 'annonces'%} #}
        {{ form_start(formulaire) }}
            {{ form_widget(formulaire,{'attr': {'class': 'form-control'}}) }}

            {% for image in annonce.images %}
                <div>
                    <img src="{{ asset('/uploads/' ~ image.name) }}" alt="image" width="150">
                    {# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
                    <a class="btn" href="{{ path('annonces_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">Supprimer</a>
                </div>
            {% endfor %}
            <div>
                <button class="btn btn-primary" type="submit">Ajouter</button>
            </div>
        {{ form_end(formulaire) }}
    </div>
{% endblock %}
