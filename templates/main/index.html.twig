{% extends 'base.html.twig' %}

{% block title %}Petites Annonces{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1>Site de petites annonces</h1>
        {% for annonce in annonces %}
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ asset('uploads/' ~ annonce.images[0].name) }}" class="img-fluid rounded-start" alt="{{ annonce.title }}">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ annonce.title }}</h5>
                            <p class="card-text">{{ annonce.content | u.truncate(50, '...') | raw}}</p>
                            <p class="card-text">
                                <small class="text-muted">{{ annonce.createdAt | date}}</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}