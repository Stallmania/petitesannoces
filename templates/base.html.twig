                                <a class="nav-link" href="{{ path('users') }}">
                                {{app.user.name}}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('users_annonces_ajout') }}">Ajouter une annonce</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                            </li>
                            {% endif %}
                            {% if app.user.roles[0] is defined and app.user.roles[0] is same as 'ROLE_ADMIN' %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_home') }}">Administrateur</a>
                            </li>
                            {% endif %}
                        </ul>
